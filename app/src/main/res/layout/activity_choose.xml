<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choose"
    android:background="#808080">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/inventoryBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:text="@string/make_choice"
        android:textSize="30dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/scheduleBtn"
        android:layout_width="138dp"
        android:layout_height="71dp"
        android:layout_centerInParent="true"
        android:text="Schedule"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/inventoryBtn"
        android:layout_width="138dp"
        android:layout_height="71dp"
        android:layout_above="@id/scheduleBtn"
        android:layout_centerHorizontal="true"
        android:text="Inventory"
        android:onClick="onClick"/>


    <Button
        android:id="@+id/guestFormBtn"
        android:layout_width="138dp"
        android:layout_height="71dp"
        android:layout_below="@id/scheduleBtn"
        android:layout_centerHorizontal="true"
        android:text="GuestForm"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="27dp"
        android:onClick="onClick"
        android:text="Create NEST account" />

</RelativeLayout>