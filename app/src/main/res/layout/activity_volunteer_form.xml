<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout tools:context=".GuestForm"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="casual"
        android:id="@+id/title_txt"
        android:text="@string/app_name"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/editText5"
        android:hint="@string/email_lbl"
        android:layout_below="@id/editText4"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_height="45dp"
        android:layout_width="wrap_content"
        android:id="@+id/editText2"
        android:hint="@string/phone_lbl"
        android:layout_below="@id/editText"
        android:inputType="phone"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/editText3"
        android:hint="@string/date_lbl"
        android:layout_below="@id/editText2"
        android:inputType="date"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/editText6"
        android:hint="@string/address_lbl"
        android:layout_below="@id/editText5"
        android:inputType="textPostalAddress"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/editText"
        android:hint="@string/name_lbl"
        android:layout_below="@id/title_txt"
        android:inputType="textPersonName"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/editText4"
        android:hint="@string/ID_lbl"
        android:layout_below="@id/editText3"
        android:inputType="number"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/editText7"
        android:hint="@string/town_lbl"
        android:layout_below="@id/editText6"
        android:inputType="textPersonName"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/editText8"
        android:hint="@string/zip_lbl"
        android:layout_below="@id/editText7"
        android:inputType="number"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/editText9"
        android:hint="@string/income_lbl"
        android:layout_below="@id/editText8"
        android:inputType="number"/>

    <Spinner
        android:id="@+id/contact_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText9"
        android:entries="@array/contact"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/done_button"
        android:text="@string/submitBtn_lbl"
        android:layout_below="@id/contact_spinner"/>
    <!--android:onClick="onClick"-->

    <Spinner
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/states_spinner"
        android:layout_below="@id/editText6"
        android:layout_toRightOf="@id/editText7"
        android:entries="@array/states_array"/>

</RelativeLayout>